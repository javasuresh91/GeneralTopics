<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <icon>
    <large-icon>/hai.jpg</large-icon>
  </icon>
  <display-name>Deployment Info</display-name>
  <description>This is used Explain the WEB.xml file tags</description>
  <context-param>
    <param-name>myName</param-name>
    <param-value>Suresh</param-value>
  </context-param>
  <servlet>
    <display-name>Context Demo Info</display-name>
    <servlet-name>contextServlet</servlet-name>
    <servlet-class>com.descriptor.tag.demo.ContextServletDemo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>contextServlet</servlet-name>
    <url-pattern>/contextParam</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>filterClass</filter-name>
    <filter-class>com.descriptor.tag.demo.FilterHanldingMapping</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>filterClass</filter-name>
    <url-pattern>/filterMapping</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>filterServlet</servlet-name>
    <servlet-class>com.descriptor.tag.demo.FilterServletDemo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>filterServlet</servlet-name>
    <url-pattern>/filterMapping</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>filterConfigClass</filter-name>
    <filter-class>com.descriptor.tag.demo.FilterConfigHandlingMapping</filter-class>
    <init-param>
      <param-name>paramOne</param-name>
      <param-value>no</param-value>
    </init-param>
    <init-param>
      <param-name>paramTwo</param-name>
      <param-value>yes</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>filterConfigClass</filter-name>
    <url-pattern>/filterInitParam</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>filterConfigServlet</servlet-name>
    <servlet-class>com.descriptor.tag.demo.FilterConfigServletDemo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>filterConfigServlet</servlet-name>
    <url-pattern>/filterInitParam</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>com.descriptor.tag.demo.AppContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>servletConfig</servlet-name>
    <servlet-class>com.descriptor.tag.demo.ServletConfigInitParam</servlet-class>
    <init-param>
      <param-name>hello</param-name>
      <param-value>test</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>servletConfig</servlet-name>
    <url-pattern>/servletConfig</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.NullPointerException</exception-type>
    <location>/errorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/errorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/errorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/errorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/errorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/errorPage.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>exceptionServlet</servlet-name>
    <servlet-class>com.descriptor.tag.demo.ErrorSimulationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>exceptionServlet</servlet-name>
    <url-pattern>/errorPageHandling</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>exceptionServlet</servlet-name>
    <url-pattern>/errorServletHandling</url-pattern>
  </servlet-mapping>
</web-app>